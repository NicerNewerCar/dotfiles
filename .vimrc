colorscheme industry

" turn hybrid line numbers on
set number relativenumber
set nu rnu

" Set bottom banner
set ruler
set rulerformat=%=%h%m%r%w\ %(%c%V%),%l/%L\ %P

set showcmd " Keep last command up
set showmode " Show insert/visual mode

" Tabs
set tabstop=2
set shiftwidth=2
set expandtab
set autoindent
set smartindent

" Wrap text at 120
set textwidth=120

set nohlsearch " No highlight after search

set spell spelllang=en_us
